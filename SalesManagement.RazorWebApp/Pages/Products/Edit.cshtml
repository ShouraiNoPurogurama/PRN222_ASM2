@page
@model EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" id="productId"/>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" id="productName"/>
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.CategoryId" class="control-label"></label>
                <select asp-for="Product.CategoryId" id="productCategory" class="form-select"
                        asp-items="ViewBag.CategoryList" required>
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" id="productDescription" class="form-control"/>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ImageFile" class="control-label"></label>
                <input asp-for="Product.ImageFile" id="productImageFile" class="form-control"/>
                <span asp-validation-for="Product.ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" id="productPrice" class="form-control"/>
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Ingredients" class="control-label"></label>
                <input asp-for="Product.Ingredients" id="productIngredients" class="form-control"/>
                <span asp-validation-for="Product.Ingredients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.UsageInstructions" class="control-label"></label>
                <input asp-for="Product.UsageInstructions" id="productUsageInstructions" class="form-control"/>
                <span asp-validation-for="Product.UsageInstructions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.StockQuantity" class="control-label"></label>
                <input asp-for="Product.StockQuantity" id="productStockQuantity" class="form-control"/>
                <span asp-validation-for="Product.StockQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.CreatedAt" class="control-label"></label>
                <input asp-for="Product.CreatedAt" class="form-control"/>
                <span asp-validation-for="Product.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.CreatedBy" class="control-label"></label>
                <input asp-for="Product.CreatedBy" class="form-control"/>
                <span asp-validation-for="Product.CreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.LastModified" class="control-label"></label>
                <input asp-for="Product.LastModified" class="form-control"/>
                <span asp-validation-for="Product.LastModified" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.LastModifiedBy" class="control-label"></label>
                <input asp-for="Product.LastModifiedBy" class="form-control"/>
                <span asp-validation-for="Product.LastModifiedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}