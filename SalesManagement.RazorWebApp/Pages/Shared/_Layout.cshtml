<!DOCTYPE html>
<html lang="vi">
<head>
    <title>@ViewData["Title"] - Sales Management</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/custom-style.css">
    <link rel="stylesheet" href="~/css/loaders.css">
    <link rel="stylesheet" href="~/font-awesome/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<style>
    .bg-dark {
        background-color: #0e0a06 !important;
    }
</style>

<body>
<div class="loader loader-bg">
    <div class="loader-inner ball-pulse">
        <div></div>
        <div></div>
        <div></div>
    </div>
</div>

<nav class="navbar navbar-expand-md fixed-top top-nav">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-page="/Index"><strong>SalesManagement</strong></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"><img src="~/img/icons/menu.png"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav m-auto text-sm-center text-md-center">
                <li class="nav-item" style="font-size: 1.5rem; padding: 0.5rem 1rem;"><a class="nav-link" asp-area="" asp-page="/Index">Home</a></li>
                <li class="nav-item" style="font-size: 1.5rem; padding: 0.5rem 1rem;"><a class="nav-link" asp-area="" asp-page="/Privacy">Privacy</a></li>
                <li class="nav-item" style="font-size: 1.5rem; padding: 0.5rem 1rem;"><a class="nav-link" asp-area="" asp-page="/Products/Index">Products</a></li>
            </ul>
            <ul class="navbar-nav ml-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item" style="font-size: 1.5rem; padding: 0.5rem 1rem;">
                        <span class="nav-link">Hello, @User.Identity.Name!</span>
                    </li>
                    <li class="nav-item" style="font-size: 1.5rem; padding: 0.5rem 1rem;">
                        <form method="post" asp-area="" asp-page="/Account/Logout">
                            <button type="submit" class="btn btn-link nav-link">Logout</button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item" style="font-size: 1.5rem; padding: 0.5rem 1rem;">
                        <a class="nav-link" asp-area="" asp-page="/Account/Login">Login</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

<div style="max-width: 100%; padding: 0" class="container">
    @RenderBody()
</div>

<div class="copy-footer bg-primary py-2">
    <div class="container text-center text-light">
        &copy; <a href="http://grafreez.com" target="_blank">TNA</a> <span id="year"></span>. All rights reserved. Created with <i class="fa fa-heart"></i>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<script src="~/js/bootstrap.min.js"></script>
<script src="~/js/core.js"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>