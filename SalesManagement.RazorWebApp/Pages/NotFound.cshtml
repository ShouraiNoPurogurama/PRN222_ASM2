@page
@model SalesManagement.RazorWebApp.Pages.NotFound

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 - Not Found</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            padding-top: 100px;
            background-color: #0D0D0D;
            color: white;
            text-align: center;
            font-family: Arial, sans-serif;
        }
        .not-found {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }
        .big-404 {
            font-size: 120px;
            font-weight: bold;
            position: relative;
        }
        .big-404 img {
            width: 600px; /* Adjust image size */
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -60%);
        }
        .message {
            font-size: 40px;
            margin-top: 85px;
            font-weight: bolder;
        }
        .subtext {
            font-size: 22px;
            color: #A0A0A0;
        }
        .btn-home {
            margin-top: 30px;
            font-size: 22px;
            padding: 13px 30px;
            background-color: white;
            color: black;
            border-radius: 10px;
            text-decoration: none;
            font-weight: bolder;
            display: inline-block;
        }
        .btn-home:hover {
            background-color: #E0E0E0;
        }

        .gradient-starbg {
            z-index: -2;
            background-image: url('@Url.Content("~/images/background/gradient_bg.svg")');
            background-position: center bottom;
            background-repeat: no-repeat;
            background-size: cover;
            width: 100%;
            height: 45vh; /* Cover the entire viewport height */
            position: absolute;
            top: 0;
            left: 0;
        }

    </style>
</head>
<body>

<div class="not-found">
    <div class="gradient-starbg"></div>
    <div class="big-404">
        <img src="~/images/background/404_bg.svg" alt="Dog">
    </div>
    <div class="message">Why are you here?</div>
    <div class="subtext">You're not supposed to be here.</div>
    <a href="/" class="btn-home">Go home</a>
</div>

</body>
</html>